<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.ac.kopo.board.dao.estimateBoardMapper">
	<resultMap type="boardVO" id="boardMap">
		<result column="CREATED_DATE" property="regDate" />
		<result column="CREATED_TIME" property="regTime" />
	</resultMap>
	<select id="selectAll" resultType="kr.ac.kopo.board.vo.BoardVO">
		SELECT POST_ID
				,USER_ID
				,TITLE
				,CONTENT
				,TO_CHAR(CREATED_AT, 'YYYY-MM-DD') AS CREATED_DATE
				,TO_CHAR(CREATED_AT, 'HH24:MI:SS') AS CREATED_TIME
				,STATUS
		FROM ESTIMATE_POSTS;
	</select>
</mapper>












